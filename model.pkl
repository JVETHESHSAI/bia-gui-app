import pandas as pd
from sklearn.linear_model import LinearRegression
import joblib

# Load your dataset (replace with actual path if needed)
df = pd.read_excel("sample_data.xlsx")  # Or CSV

# Example: Assume 'Severity' is the target
X = df.drop(columns=["Severity"])  # Features
y = df["Severity"]                 # Target

# Train model
model = LinearRegression()
model.fit(X, y)

# Save the model
joblib.dump(model, "model.pkl")
print("âœ… Model saved successfully!")
